<%- include ../partials/header.ejs %>
<%- include ../partials/nav.ejs %>

<!--container-start-->
<div class="container">
    <div class="row">
        <!--sidebar-start-->
        <div class="col-md-3">
            <%- include ../partials/sidebar.ejs %>
        </div>
        <!--sidebar-end-->

        <!--content-start-->
        <div class="col-md-9">
            <div id="content">
                <div class="row">
                    <!--breadcrumb-start-->
                    <div class="col-md-12 mb-4">
                        <div class="row">
                            <div class="col-md-8">
                                <h3>CREATE POSTS</h3>
                            </div>
                            <div class="col-md-4">
                                <nav aria-label="breadcrumb">
                                    <ol class="breadcrumb mb-0">
                                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                                        <li class="breadcrumb-item active" aria-current="page">Posts</li>
                                    </ol>
                                </nav>
                            </div>
                            <div class="col-md-12">
                                <hr>
                            </div>
                        </div>
                    </div>
                    <!--breadcrumb-end-->
                    <div class="col-md-12 mb-5">
                        <form action="/admin/posts/store" method="post">
                            <div class="form-group">
                                <label>Select Category</label>
                                <select name="categoryId" class="form-control" required>
                                    <% categories.forEach(function(category, key) { %>
                                    <option value="<%= category.id %>"><%= category.name %></option>
                                    <% }) %>
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Post Title</label>
                                <input type="text" name="title" class="form-control" required placeholder="Enter your title">
                            </div>
                            <div class="form-group">
                                <label>Post Content</label>
                                <textarea name="content" cols="30" class="form-control" rows="5" required
                                          placeholder="Enter your content"></textarea>
                            </div>
                            <div class="form-group">
                                <label>Image</label>
                                <input type="file" name="image" class="form-control">
                            </div>
                            <button type="submit" class="btn btn-primary">Submit</button>
                            <a href="/admin/posts/create" class="btn btn-warning">Add New</a>
                            <button type="reset" class="btn btn-secondary">Reset</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!--content-end-->
    </div>
</div>
<!--container-end-->

<%- include ../partials/footer.ejs %>
